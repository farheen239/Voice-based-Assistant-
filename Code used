#include <WiFi.h>
#include "driver/i2s.h"

const char* ssid     = "Farheeen";
const char* password = "farheenbegum@0888";

/* I2S pins â€“ CHANGE according to your ESP32-S3 board */
#define I2S_WS   5    
#define I2S_SD   6     
#define I2S_SCK  4     

#define I2S_PORT I2S_NUM_0

void setupI2S()
{
  i2s_config_t i2s_config = {
    .mode = (i2s_mode_t)(I2S_MODE_MASTER | I2S_MODE_RX),
    .sample_rate = 16000,
    .bits_per_sample = I2S_BITS_PER_SAMPLE_16BIT,
    .channel_format = I2S_CHANNEL_FMT_ONLY_LEFT,
    .communication_format = I2S_COMM_FORMAT_I2S,
    .intr_alloc_flags = ESP_INTR_FLAG_LEVEL1,
    .dma_buf_count = 8,
    .dma_buf_len = 512,
    .use_apll = false
  };

  i2s_pin_config_t pin_config = {
    .bck_io_num = I2S_SCK,
    .ws_io_num  = I2S_WS,
    .data_out_num = -1,     // only MIC now
    .data_in_num  = I2S_SD
  };

  i2s_driver_install(I2S_PORT, &i2s_config, 0, NULL);
  i2s_set_pin(I2S_PORT, &pin_config);
}

void connectWiFi()
{
  WiFi.begin(ssid, password);
  Serial.print("Connecting");

  while (WiFi.status() != WL_CONNECTED)
  {
    delay(500);
    Serial.print(".");
  }

  Serial.println("\nWiFi connected");
}

void setup()
{
  Serial.begin(115200);

  connectWiFi();
  setupI2S();

  Serial.println("Voice assistant prototype started");
}

void loop()
{
  int16_t samples[512];
  size_t bytesRead;

  i2s_read(I2S_PORT, samples, sizeof(samples), &bytesRead, portMAX_DELAY);

  /*
   Here you normally:
   1. send audio buffer to cloud (speech to text)
   2. get command text
   3. get reply audio
   4. play it on speaker
  */

  Serial.println("Listening...");
}
